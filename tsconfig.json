{
  "compilerOptions": {
    "target": "ESNext",
    "module": "Node16",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "removeComments": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "sourceMap": true
  },
  "include": ["src/**/*.ts", "src/utils/validateUuid.ts"],
  "exclude": ["node_modules", "dist"]
}
